{
    "env": {
        "browser": true,
        "node": false,
        "es6": true,
        "jasmine": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": [
            "error",
            "always-multiline"
        ],
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "semi": [
            "error",
            "always"
        ],
        "no-console": 0,
        "no-unused-vars": [
          "warn", { "vars": "all", "argsIgnorePattern": "^undefined$" }
        ],
        "no-undef": [
          "warn"
        ]
    }
}
